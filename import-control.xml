<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC "-//Puppy Crawl//DTD Import Control 1.2//EN"
        "import_control_1_2.dtd">

<import-control pkg="ca.crystalshard.chasm">
    <allow pkg="java"/>
    <allow pkg="org"/>
    <allow pkg="com.google"/>
    <allow pkg="sun"/>
    <allow pkg="javax"/>
    <allow pkg="ca.crystalshard.chasm"/>
    <subpackage name="boot">
        <allow pkg="spark"/>
        <subpackage name="guice">
            <allow pkg="com.mysql"/>
        </subpackage>
    </subpackage>
    <subpackage name="common">
        <disallow pkg="ca.crystalshard.chasm.web"/>
        <disallow pkg="ca.crystalshard.chasm.boot"/>
        <disallow pkg="ca.crystalshard.chasm.crawler"/>
        <subpackage name="domain">
            <disallow pkg="ca.crystalshard.chasm.common.adapter"/>
        </subpackage>
        <subpackage name="adapter">
            <subpackage name="persistance.flyway">
                <allow pkg="org.flywaydb"/>
            </subpackage>
            <subpackage name="spark">
                <allow pkg="spark"/>
            </subpackage>
        </subpackage>
    </subpackage>
    <subpackage name="web">
        <disallow pkg="ca.crystalshard.chasm.processor"/>
        <disallow pkg="ca.crystalshard.chasm.boot"/>
        <subpackage name="domain">
            <disallow pkg="ca.crystalshard.chasm.web.adapter"/>
        </subpackage>
        <subpackage name="adapter">
            <allow pkg="spark"/>
        </subpackage>
    </subpackage>
    <subpackage name="crawler">
        <disallow pkg="ca.crystalshard.chasm.web"/>
        <disallow pkg="ca.crystalshard.chasm.boot"/>
        <subpackage name="adapter.providers">
            <allow pkg="okhttp3"/>
        </subpackage>
        <subpackage name="adapter.httpclient.okhttp3">
            <allow pkg="okhttp3"/>
        </subpackage>
        <subpackage name="domain">
            <disallow pkg="ca.crystalshard.chasm.common.adapter"/>
        </subpackage>
    </subpackage>
</import-control>